<resources>

    <declare-styleable name="DayPickerView">
        <attr name="currentDayFrameColor" format="color"/>
        <attr name="currentDayTextColor" format="color"/>

        <attr name="selectedDayBackgroundColor" format="color"/>
        <attr name="selectedDayTextColor" format="color"/>
        <attr name="selectedFirstLastDayBackColor" format="color"/>
        <attr name="selectedFirstLastDayTextColor" format="color"/>

        <attr name="previousDayTextColor" format="color"/>
        <attr name="normalDayTextColor" format="color" />

        <attr name="yearMonthTextColor" format="color" />
        <attr name="weekTextColor" format="color" />

        <attr name="busyDaysBackgroundColor" format="color" />
        <attr name="busyDaysTextColor" format="color" />

        <attr name="inValidDaysTextColor" format="color" />
        <attr name="inValidDaysBackgroundColor" format="color" />

        <attr name="dayTextSize" format="dimension"/>
        <attr name="tagTextSize" format="dimension"/>
        <attr name="yearMonthTextSize" format="dimension" />
        <attr name="weekTextSize" format="dimension" />
        <attr name="headerMonthHeight" format="dimension" />
        <attr name="selectedDaySize" format="dimension"/>
        <attr name="calendarViewHeight" format="dimension" />
        <attr name="enablePreviousDay" format="boolean" />
        <attr name="todayBorderColor" format="color"/>
        <attr name="isSelectable" format="boolean"/>
    </declare-styleable>

    <!-- TODO Add reference to tab style-->
    <declare-styleable name="TabbedDayRangePicker">
        <attr name="isTabEnabled" format="boolean"/>
        <attr name="startYear" format="integer"/>
        <attr name="startMonth" format="integer"/>
        <attr name="monthCount" format="integer"/>
        <attr name="firstDayTitle" format="string"/>
        <attr name="lastDayTitle" format="string"/>
        <attr name="title" format="string"/>
        <attr name="tabSwitchEnabled" format="boolean"/>
        <attr name="tabStripColor" format="color"/>
    </declare-styleable>

    <style name="DayTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
